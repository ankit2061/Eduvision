# ─── OpenRouter / Gemini ──────────────────────────────────
OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
GEMINI_MODEL=google/gemini-2.0-flash-exp
GEMINI_AUDIO_MODEL=google/gemini-2.0-flash-exp

# ─── ElevenLabs ───────────────────────────────────────────
ELEVENLABS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ELEVENLABS_DEFAULT_VOICE_ID=21m00Tcm4TlvDq8ikWAM
# Voice used for AAC output (classroom-friendly)
ELEVENLABS_AAC_VOICE_ID=AZnzlk1XvdvUeBnXmlld

# ─── Snowflake ────────────────────────────────────────────
SNOWFLAKE_ACCOUNT=your-account.snowflakecomputing.com
SNOWFLAKE_USER=eduvision_user
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=EDUVISION
SNOWFLAKE_SCHEMA=PUBLIC
